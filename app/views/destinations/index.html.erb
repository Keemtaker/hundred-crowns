<div class="container">
  <div class="row">
<%= "It appears your search returned no results, click on the crown to search again." if @destinations_and_menu_items.empty? %>
    <% @destinations_and_menu_items.each do |hash| %>
    <% hash.each do |destination, menu_items| %>


    <div class="col-xs-12 col-sm-4 col-md-3 link-unstyle">
      <%= link_to destination_path(destination) do %>
      <div class="cards" style="background-image: linear-gradient(-180deg, rgba(0,0,0,0.00) 0%, rgba(0,0,0,0.70) 100%), url(' <%= cl_image_path destination.photo.path, width: 300, crop: :fill %> ');">
        <div class="card-title">
          <h4><%= destination.name %></h4>
        </div>
      </div>
      <div class="card-description">
          
          <div class="card-location">
            <%= destination.distance_from("Ahornsgade 15, 2200 Copenhagen").round(1) %> km
          </div>
        <div class="card-content">
          <% menu_items.each do |menu_item| %>
          <p>
            <%= "#{menu_item.category} | #{menu_item.price.to_i} kroner"  %>
          </p>
          <% end %>
        </div>

      </div>
      <% end %>
    </div>
    <% end %>
    <% end %>
  </div>
</div>






