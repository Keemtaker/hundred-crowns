<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
</head>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="form-show">
        <h1>100 Crowns</h1>
        <p>Get What you Want.</p>
        <%= simple_form_for :destination, url: destinations_path, :method => :get do |f| %>
        <%= f.input :price, placeholder: "DKK", :autofocus => true %>

        <div class="form-group">
          <input type="hidden" name="destination[category][]" value="">

          <div class="category-choices">
            <input class="hidden" type="checkbox" value="Beers" name="destination[category][]" id="destination_category_beers">
            <label class="category-choice" for="destination_category_beers">
             Beers
           </label>

           <input class="hidden" type="checkbox" value="Wines" name="destination[category][]" id="destination_category_wines">
           <label class="category-choice" for="destination_category_wines">
            Wines
          </label>

          <input class="hidden" type="checkbox" value="Cocktails" name="destination[category][]" id="destination_category_cocktails">
          <label class="category-choice" for="destination_category_cocktails">
            Cocktails
          </label>

          <input class="hidden" type="checkbox" value="Apps" name="destination[category][]" id="destination_category_apps">
          <label class="category-choice" for="destination_category_apps">
            Apps
          </label>

          <input class="hidden" type="checkbox" value="Mains" name="destination[category][]" id="destination_category_mains">
          <label class="category-choice" for="destination_category_mains">
            Mains
          </label>

          <input class="hidden" type="checkbox" value="Desserts" name="destination[category][]" id="destination_category_desserts">
          <label class="category-choice" for="destination_category_desserts">
            Desserts
          </label>
        </div>
      </div>

      <%= f.submit "Search", class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>
</div>



